<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="signup-form">
          <form method="post" class="mt-5 p-5 bg-light shadow needs-validation">

            <h1 class="mb-4 text-secondary">Đăng nhập vào tài khoản của bạn</h1>

            <div class="form-floating mb-3 col-md-12">
              <input type="email" name="email" class="form-control" id="MyEmail" placeholder="name@example.com">
              <span id="MyAccount"></span>
              <label for="MyAccount">Email<span class="text-danger">*</span></label>
            </div>
            <div class="form-floating col-md-12">
              <input type="password" name="password" class="form-control" id="MyPassword" placeholder="Password">
              <span id="MyPassword"></span>
              <label for="MyPassword">Mật khẩu<span class="text-danger">*</span></label>
            </div>

            <div class="mt-2">
              <!-- Simple link -->
              <a href="#!" class="text-decoration-none">Quên mật khẩu?</a>
            </div>

            {{#if error}}
            <div class="error alert alert-danger mt-3" role="alert">
              Tài khoản hoặc mật khẩu không đúng.
            </div>
            {{/if}}


            {{!-- login button --}}
            <div class="col-md-12 mt-2 mb-4">
              <button type="submit" class="btn btn-primary flex-shrink-0 float-end" id="submitLoginInfo">Đăng
                nhập</button>
            </div>
            {{!-- toast --}}
            <div class="toast-container position-fixed bottom-0 end-0 p-3">
              <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                  <img src="/asset/img/green-check.png" class="rounded me-2" alt="..." />
                  <strong class="me-auto">Thông báo</strong>
                  <small>Vừa xong</small>
                  <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                  Bạn đã đăng nhập thành công.
                </div>
                <script>
                  const toastTrigger = document.getElementById("submitLoginInfo");
                  const toastLiveExample = document.getElementById("liveToast");
                  if (toastTrigger) {
                    toastTrigger.addEventListener("click",
                      function () {
                        const toast = new
                          bootstrap.Toast(toastLiveExample); toast.show();
                      });
                  }
                </script>
              </div>
            </div>
          </form>
          <p class="text-center mt-3 text-secondary">Bạn chưa có tài khoản? <a href="/account/register"
              class="text-decoration-none">Đăng ký tại
              đây!</a></p>
        </div>
      </div>
    </div>
  </div>
  <!-- Core theme JS-->
  <script src="../../public/js/scripts.js"></script>
</body>