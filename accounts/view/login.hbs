<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="signup-form">
          <form method="post" class="mt-5 p-5 bg-light shadow">

            <h3 class="mb-4 text-secondary">Đăng nhập vào tài khoản của bạn</h3>

            <div class="mb-3 col-md-12">
              <label>Tài khoản<span class="text-danger">*</span></label>
              <input type="text" name="username" class="form-control" id="MyAccount">
            </div>
            <div class="mb-3 col-md-12">
              <label>Mật khẩu<span class="text-danger">*</span></label>
              <input type="password" name="password" class="form-control" id="MyPassword">
            </div>

            <div class="col">
              <!-- Simple link -->
              <a href="#!">Quên mật khẩu?</a>
            </div>

            {{#if error}}
            <div class="error">
              {{error}}
            </div>
            {{/if}}

            <div class="col-md-12 mb-4">
              <button class="btn btn-primary float-end" id="submitLoginInfo">Đăng nhập</button>
            </div>
          </form>

          <p class="text-center mt-3 text-secondary">Bạn chưa có tài khoản? <a href="/account/signup">Đăng ký tại
              đây</a></p>
        </div>
      </div>
    </div>
  </div>
</body>