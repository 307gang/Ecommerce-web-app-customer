<body>
    <div class="container">
        <div class="row mt-5">
            <h2 class="list-product-title">Các mặt hàng phổ biến</h2>
        </div>

        <div class="group-clothes mt-4">
            <div class="row">
                {{#each product_list}}
                <div class="col-md-3 col-sm-6 col-12 mb-5">
                    <div class="card" style="width: 280px;">
                        <img src="{{product_image}}" width="280" height="350" class="card-img-top" alt="...">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{product_name}}</h5>
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <p class="card-text">{{product_price}}</p>
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <button class="btn btn-outline-primary" type="button">Xem chi tiết</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>
</body>