<body>
    <div class="container">
        <div class="row mt-5">
            <div class="row mt-5">
                <h2 class="list-product-title">Tất cả các sản phẩm</h2>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="input-group">
                        <input type="text" name="name" class="form-control" placeholder="Search by name">
                        <div class="input-group-append">
                            <button class="input-group-text bg-transparent text-primary">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="dropdown ml-4">
                        <button class="btn border dropdown-toggle" type="button" id="triggerId"
                                data-bs-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                            Sort by
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                            <li><a class="dropdown-item" href="{{originalUrl}}?{{filter_state}}&sortBy=created_date&sortOrder=asc">Mới nhất</a></li>
                            <li><a class="dropdown-item" href="{{originalUrl}}?{{filter_state}}&sortBy=price&sortOrder=asc">Giá tăng dần</a></li>
                            <li><a class="dropdown-item" href="{{originalUrl}}?{{filter_state}}&sortBy=price&sortOrder=desc">Giá giảm dần</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Shop Sidebar Start -->
            <div class="col-lg-2 col-md-12" id="filter">
                <input type="hidden" id="filter-state" value={{filter_state}}>
                <input type="hidden" id="order-state" value={{order_state}}>
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Lọc theo giá</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-filter" data-value="" id="price-all">
                        <label class="custom-control-label" for="price-all">Tất cả các giá</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-filter price-filter" data-value='{"start": 0, "end": 50}' id="price-1">
                        <label class="custom-control-label" for="price-1">0 - 50000 VND</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-filter price-filter" data-value='{"start": 50, "end": 100}' id="price-2">
                        <label class="custom-control-label" for="price-2">50000 - 100000 VND</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-filter" data-value='{"start": 100, "end": 500}' id="price-3">
                        <label class="custom-control-label" for="price-3">100000 - 500000 VND</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-filter" data-value='{"start": 500, "end": 1000}' id="price-4">
                        <label class="custom-control-label" for="price-4">500000 - 1000000 VND</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="checkbox" class="custom-control-input price-filter" data-value='{"start": 1000, "end": 5000}' id="price-5">
                        <label class="custom-control-label" for="price-5">1000000 - 5000000 VND</label>
                    </div>
                </div>
                <!-- Price End -->

                <!-- Color Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Lọc theo loại sản phẩm</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input cat-filter" value = "" id="cat-all">
                        <label class="custom-control-label" for="cat-all">Tất cả sản phẩm</label>
                    </div>
                    {{#each category_list}}
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input cat-filter" value="{{category_id}}" id="cat-{{category_id}}">
                        <label class="custom-control-label" for="cat-{{category_id}}">{{category_name}}</label>
                    </div>
                    {{/each}}
                </div>
                <!-- Color End -->

                <!-- Size Start -->
                <div class="mb-5">
                    <h5 class="font-weight-semi-bold mb-4">Lọc theo hãng sản xuất</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input brand-filter" value="" id="brand-all">
                        <label class="custom-control-label" for="brand-all">Tất cả các hãng</label>
                    </div>
                    {{#each brand_list}}
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input brand-filter" value="{{brand_id}}" id="brand-{{brand_id}}">
                        <label class="custom-control-label" for="brand-{{brand_id}}">{{brand_name}}</label>
                    </div>
                    {{/each}}
                </div>
                <!-- Size End -->
            </div>
            <!-- Shop Sidebar End -->

            <div class="col-lg-9 col-md-12">
                <div class="group-clothes mt-4">
                    <div class="row ">
                        {{#each product_list}}
                        <div class="col-lg-4 col-md-5 mb-5">
                            <div class="card" style="width: 280px;">
                                <img src="{{product_image}}" width="280" height="350" class="card-img-top" alt="...">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{product_name}}</h5>
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <p class="card-text">{{multiply price 1000}} VND</p>
                                    <div class="d-grid gap-2 col-6 mx-auto">
                                        <a class="btn btn-outline-info" type="button" href="/product/{{product_id}}">Xem chi tiết</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    <!-- Core theme JS-->
    <script src="/js/all_product.js"></script>
   
</body>